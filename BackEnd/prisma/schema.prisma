// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id String @unique @default(uuid())
  name String
  email String
  password String
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patients Patients[]

  @@map("admins")
}

model Patients {
  id String @unique @default(uuid())
  name String
  cnp String
  email String @unique
  password String @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  adminId String
  admin Admin @relation(references: [id], fields: [adminId])

  alergies Alergies[]

  @@map("patients")
}

model Alergies {
  id String @unique @default(uuid())
  name String
  createAt DateTime @default(now())
  
  patientId String
  patient Patients @relation(references: [id], fields: [patientId])
}