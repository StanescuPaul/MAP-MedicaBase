generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"] // pentru docker
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")//da eroare dar cumva merge 
}

model Doctor {
  id String @unique @default(uuid())
  name String
  userName String @unique
  password String @unique
  profileImgUrl String? 
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patients Patients[]

  @@map("doctor")
}

model Patients {
  id String @unique @default(uuid())
  name String
  cnp String @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  doctorId String
  doctor Doctor @relation(references: [id], fields: [doctorId], onDelete: Cascade)

  alergies Alergies[]

  @@map("patients")
}

model Alergies {
  id String @unique @default(uuid())
  name String
  createAt DateTime @default(now())
  
  patientId String
  patient Patients @relation(references: [id], fields: [patientId], onDelete: Cascade)
}